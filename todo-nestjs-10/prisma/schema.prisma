generator client {
  provider = "prisma-client-js"
}

generator markdown {
  provider = "prisma-markdown"
  output   = "./ERD.md"
  title    = "ER図"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/// @namespace TODO
model UserModel {
  /// ユーザーID *(CHAR(26), NOT NULL)*
  id        String   @id @db.Char(26)
  /// ユーザー名 *(VARCHAR(30), NOT NULL)*
  name      String   @db.VarChar(30)
  /// メールアドレス *(VARCHAR(50), NOT NULL)*
  email     String   @unique @db.VarChar(50)
  /// ユーザー管理権限 *(ENUM{amdin, member}), NOT NULL)*
  role      UserRole
  /// 削除フラグ *(BOOLEAN, NOT NULL)*
  isDeleted Boolean  @default(false) @map("is_deleted")
  /// パスワード *(VARCHAR(30), NOT NULL)*
  password  String   @db.VarChar(60)
  /// アクティブ状態 *(BOOLEAN, NOT NULL)*
  isActive  Boolean  @default(true) @map("is_active")
  /// 作成日 *(TIMESTAMP WITH TIME ZONE, NOT NULL)*
  createAt  DateTime @map("create_at") @db.Timestamptz()
  /// 更新日 *(TIMESTAMP WITH TIME ZONE)*
  updateAt  DateTime @map("update_at") @db.Timestamptz()
  /// 排他制御バージョン *(INT)*
  version   Int      @default(1) @db.Integer

  groups        UserGroupModel[]
  assignedTodos TodoModel[]      @relation("AssignedTodos")
  createdTodos  TodoModel[]      @relation("CreatedTodos")

  @@map("users")
}

enum UserRole {
  admin
  general
}

enum GroupClassification {
  private
  public
}

/// @namespace TODO
model GroupModel {
  /// グループID *(CHAR(26))*
  id                  String              @id @db.Char(26)
  /// グループ名 *(グループ名)*
  name                String              @unique
  /// グループの説明 *(TEXT)*
  description         String              @db.Text()
  /// グループの種別 *(ENUM{private, public}), NOT NULL)*
  groupClassification GroupClassification @map("group_classification")
  /// 作成日 *(TIMESTAMP WITH TIME ZONE, NOT NULL)*
  createAt            DateTime            @map("create_at") @db.Timestamptz()
  /// 更新日 *(TIMESTAMP WITH TIME ZONE)*
  updateAt            DateTime            @map("update_at") @db.Timestamptz()
  /// 排他制御バージョン *(INT)*
  version             Int                 @default(1) @db.Integer

  users UserGroupModel[]

  workspaces GroupWorkspaceModel[]

  @@map("groups")
}

enum WorkspaceRole {
  owner
  member
}

/// @namespace TODO
model UserGroupModel {
  user    UserModel  @relation(fields: [userId], references: [id])
  /// ユーザーID *(CHAR(26))*
  userId  String     @map("user_id")
  group   GroupModel @relation(fields: [groupId], references: [id])
  /// グループID *(CHAR(26))*
  groupId String     @map("group_id")

  @@id([userId, groupId])
  @@map("user_groups")
}

/// @namespace TODO
model GroupWorkspaceModel {
  workspace   WorkspaceModel @relation(fields: [workspaceId], references: [id])
  /// ワークスペースID *(CHAR(26))*
  workspaceId String         @map("workspace_id")
  group       GroupModel     @relation(fields: [groupId], references: [id])
  /// グループID *(CHAR(26))*
  groupId     String         @map("group_id")
  /// ワークスペース権限 *(enum{owner, member})*
  role        WorkspaceRole
  /// 排他制御バージョン *(INT)*
  version     Int            @default(1) @db.Integer

  @@id([workspaceId, groupId])
  @@map("group_workspaces")
}

enum WorkspaceClassification {
  private
  public
}

/// @namespace TODO
model WorkspaceModel {
  /// ワークスペースID *(CHAR(26))*
  id                      String                  @id @db.VarChar(26)
  /// ワークスペース名 *(VARCHAR(30))*
  name                    String                  @db.VarChar(30)
  /// ワークスペースの説明 *(TEXT)*
  description             String                  @db.Text()
  /// ワークスペースの種別 *(ENUM{private, public}), NOT NULL)*
  workspaceClassification WorkspaceClassification @map("workspace_classification")
  /// 所有者のユーザーID *(CHAR(26))*  
  createById              String                  @map("create_by_id") @db.Char(26)
  /// 作成日 *(TIMESTAMP WITH TIME ZONE, NOT NULL)*
  createAt                DateTime                @map("create_at") @db.Timestamptz()
  /// 更新日 *(TIMESTAMP WITH TIME ZONE)*
  updateAt                DateTime                @map("update_at") @db.Timestamptz()
  /// 排他制御バージョン *(INT)*
  version                 Int                     @default(1) @db.Integer

  groups GroupWorkspaceModel[]
  todos  TodoModel[]

  @@map("workspaces")
}

enum Status {
  NotStarted
  InProgress
  Completed
}

/// @namespace TODO
model TodoModel {
  /// TODO ID *(CHAR(26))*
  id          String   @id @db.VarChar(26)
  /// TODOタイトル *(VARCHAR(30))*
  title       String   @db.VarChar(30)
  /// ワークスペースID *(CHAR(26))*
  workspaceId String   @map("workspace_id") @db.Char(26)
  /// TODOの説明 *(TEXT)*
  description String   @db.Text()
  /// ステータス *(enum{NotStarted, InProgress, Completed})*
  status      Status
  /// 完了期限日 *(CHAR(26))*
  dueDate     DateTime @map("due_date") @db.Date()
  /// 担当者のユーザーID *(CHAR(26))*
  assigneeId  String   @map("assignee_id") @db.Char(26)
  /// 作成者のユーザーID *(CHAR(26))*
  createById  String   @map("create_by_id") @db.Char(26)
  /// 作成日 *(TIMESTAMP WITH TIME ZONE, NOT NULL)*
  createAt    DateTime @map("create_at") @db.Timestamptz()
  /// 更新日 *(TIMESTAMP WITH TIME ZONE)*
  updateAt    DateTime @map("update_at") @db.Timestamptz()
  /// 排他制御バージョン *(INT)*
  version     Int      @default(1) @db.Integer

  workspace WorkspaceModel @relation(fields: [workspaceId], references: [id])
  assignee  UserModel      @relation("AssignedTodos", fields: [assigneeId], references: [id])
  createBy  UserModel      @relation("CreatedTodos", fields: [createById], references: [id])

  @@map("todos")
}
