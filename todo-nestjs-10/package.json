    "nestjs-cls": "^6.0.1",
    "nestjs-pino": "^4.4.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pino-http": "^9.0.0",
    "pino-pretty": "^13.1.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "ulid": "^3.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
